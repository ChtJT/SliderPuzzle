<Window x:Class="SliderPuzzleGameExtension.DifficultySettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="设置难度" Height="200" Width="300">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <ComboBox x:Name="DifficultyComboBox" Width="200" Margin="5">
            <ComboBoxItem>2x3</ComboBoxItem>
            <ComboBoxItem>3x3</ComboBoxItem>
            <ComboBoxItem>4x4</ComboBoxItem>
            <ComboBoxItem>5x5</ComboBoxItem>
            <ComboBoxItem>10x10</ComboBoxItem>
        </ComboBox>
        <Button Content="确定" Width="200" Margin="5" Click="ConfirmButton_Click"/>
    </StackPanel>
</Window>
